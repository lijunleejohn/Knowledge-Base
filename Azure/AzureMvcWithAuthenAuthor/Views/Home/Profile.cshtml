@using Newtonsoft.Json.Linq
@{
    ViewData["Title"] = "Profile";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<table class="table table-striped table-condensed" style="font-family: monospace">
    <tr>
        <th>Property</th>
        <th>Value</th>
    </tr>
    <tr>
        <td>photo</td>
        <td>
            @{
                if (ViewData["photo"] != null)
                {
                    <img style="margin: 5px 0; width: 150px" src="data:image/jpeg;base64, @ViewData["photo"]" />
                }
                else
                {
                    <h3>NO PHOTO</h3>
                    <p>Check user profile in Azure Active Directory to add a photo.</p>
                }
            }
        </td>
    </tr>
    @{
        var me = ViewData["me"] as Microsoft.Graph.User;
        var properties = me.GetType().GetProperties();
        var roles = User.Claims.Where(r => r.Type == "roles");

        <tr>
            <td> @me.GetType().GetProperty("DisplayName").Name </td>
            <td> @me.GetType().GetProperty("DisplayName").GetValue(me) </td>
        </tr>
        <tr>
            <td> Login </td>
            <td> @me.GetType().GetProperty("UserPrincipalName").GetValue(me) </td>
        </tr>
        <tr>
            <td>Roles</td>
            <td>
                @foreach (var role in roles)
                {
                    @role.Value<br />
                }
            </td>
        </tr>
    }
</table>